<!DOCTYPE html>
<html>
  <head>

    <title><%= content_for?(:title) ? yield(:title) : "Portfolio" %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <!-- NAVBAR -->
    <div class="navbar navbar-inverse navbar-static-top" id="nav">
      <div class="container">
        <div class="navbar-header">
          <h1 class="bienvenue hidden-xs">Welcome !</h1>
        </div>
        <div class="navbar-header">
          <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav pull-right">
            <li>
              <a href="#">Home</a>
            </li>
            <li>
              <a href="#section2">About Me</a>
            </li>
            <li>
              <a href="#section3">Hobbies</a>
            </li>
            <li>
              <a href="#section4">Skills</a>
            </li>
            <li>
              <a href="#section6">Projects</a>
            </li>
            <li>
              <%= link_to 'Contact', contact_new_path %>
            </li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
      <!--/.container -->
    </div>
    <!--/.NAVBAR -->

    <!-- HEADER -->
    <header class="imagheader">
      <div class="row">
        <div class="col-md-6 col-md-offset-5 col-xs-6 col-xs-offset-5 col-sm-6 col-sm-offset-5">
          <img alt="logo de Naïma" class="img-rounded logo" src="../img/logo_naim1.png">
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <h1>Naïma A.</h1>
          <h3>* Développeuse Web en herbe *</h3>
        </div>
      </div>
    </header>
    <!-- /HEADER -->

    <%= yield%>

    <div class="row footer" id="contact">
      <div class="col-md-6 col-md-offset-3 col-xs-12">
        <div class="social">
          <a class="link facebook" href="http://facebook.com/">
            <i class="fa fa-facebook"></i>
          </a>
          <a class="link twitter" href="https://twitter.com/">
            <span class="fa fa-twitter"></span>
          </a>
          <a class="link google-plus" href="http://google.com">
            <span class="fa fa-google-plus-square"></span>
          </a>
        </div>
      </div>
    </div>

  </body>
</html>
